<main class="main-content">
        <div class="container">
          <div class="col-md-12" style="text-align: center; padding-top: 30px;">
            <h2>Ever been told a game is an absolute gem? </h2>
            <h3> Try it before you buy it </h3>
              <a onclick="scrollToGames();">
                <i class="glyphicon glyphicon-arrow-down" style="font-size: 2em;"></i>
              </a> 
          </div>
          <div class="page" style="margin-top: 150px;">
            <section>
              <header>
                <h2 class="section-title">Popular Games</h2>
                <%= link_to "Show All", games_path, class: "all" %>
              </header>
              <div class="product-list">
                <% @games.each do |g|%>
                  <%= link_to game_path(g) do %>
                    <div class="product">
                      <div class="inner-product">
                        <div class="figure-image">
                          <%= image_tag (g.image_url(:thumb).to_s), class: "img img-responsive" %>
                        </div>
                        <h3 class="product-title"><a href="#"><%= link_to g.name, game_path(g) %></a></h3>
                        <small class="price">â‚¬5.00</small>
                        <p><%= truncate(g.description, length: 125, omission: '. . .') %></p>
                        <%= link_to "View", game_path(g), class:"button" %>
                      </div>
                    </div> <!-- .product -->
                  <% end %>
                <% end %>
              </div> <!-- .product-list -->
            </section>

            <section>
              <header>
